{% extends 'base.html.twig' %}

{% block title %}Espace administrateur
{% endblock %}

{% block body %}
	{% for message in app.flashes('success') %}
		<div class="alert alert-success text-center mt-2">
			{{message}}
		</div>
	{% endfor %}
	{% for message in app.flashes('danger') %}
		<div class="alert alert-danger text-center mt-2">
			{{message}}
		</div>
	{% endfor %}
	<h1 class="text-center mt-5 titleCard">Bienvenue sur la page de suppression d'utilisateur</h1>
	<br>
	<div class="text-center">
		<a href="{{path('admin_space')}}" class="mb-4 me-2 btn btn-outline-info bg-light">Retour dans votre espace admin</a>
	</div>
    <br>
	{{form_start(form)}}
	{# debut de modal #}
	<div class="mb-3 col-6 m-auto">{{form_row(form.email, {'label': 'Email :'})}}</div>
	<div class="modal fade" id="Modal1" tabindex="-1" aria-labelledby="ModalLabel" aria-hidden="true">
		<div class="modal-dialog">
			<div class="modal-content">
				<div class="modal-header">
					<h5 class="modal-title" id="ModalLabel">Confirmation de suppression de trick</h5>
					<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
				</div>
				<div class="modal-body">
					Etes-vous s√ªr de vouloir supprimer cet utilisateur ?
				</div>
				<div class="modal-footer m-auto text-center">
					<button type="button" class="btn btn-success" data-bs-dismiss="modal">Fermer</button>
					<input type="submit" class="btn btn-secondary" src="{{asset('images/poubelle.png')}}" value="Supprimer l'utilisateur">
				</div>
			</div>
		</div>
	</div>
</div>
{# ici fin de modal #}
<div class="text-center">
	<a href="" type="button" class="btn btn-warning" data-bs-toggle="modal" data-bs-target="#Modal1"><img src="{{asset('images/poubelle.png')}}" alt="" width="30px" class="me-2">Supprimez cet utilisateur</a>
</div>
{{form_end(form)}}{% endblock %}
