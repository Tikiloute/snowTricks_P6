{% extends 'base.html.twig' %}

{% block title %}Page de réinitialisation du mot de passe{% endblock %}

{% block body %}
<h1 class="mb-4 mt-4 text-center">Réinitialisation du mot de passe</h1>
    {% for message in app.flashes('danger') %}
        <div class="alert alert-danger text-center">
            {{message}}
        </div>
    {% endfor %}
    <div class="text-center">
        <p class="text-decoration-underline"><img src="{{asset('images/logo.png')}}" width="100vw" alt="">- SnowTricks -</p>
    </div>
    <p class="col-4 m-auto text-center mb-3">Pour la sécurité de votre compte, veuillez choisir un mot de passe complexe (avec des majuscules, des caractères spéciaux...)</p>
    <div class="col-6 m-auto">
    {{form_start(form)}}
            
            <div class="mb-3 form-group">{{form_row(form.password.first, {'label': 'Votre mot de passe :'})}}</div>
            <div class="mb-3 form-group">{{form_row(form.password.second, {'label': 'Réecrivez votre mot de passe :'})}}</div>
            <div class="text-center">    
                <button class="btn btn-lg btn-primary mt-3 ms-3" type="submit">
                    Réinitialisez le mot de passe
                </button>
            </div>
    {{form_end(form)}}
    </div>
{% endblock %}
